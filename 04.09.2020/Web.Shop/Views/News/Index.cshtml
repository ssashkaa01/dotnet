@using Web.Shop.Entities
@model NewsVM
@{
    ViewData["Title"] = "Список новин";
}
<h1>Список новин</h1>

<a class="btn btn-success" asp-action="Create">Додати новину</a>

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.list)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.Name</td>
                    </tr>
                }
            </tbody>
        </table>

        @for (int i = Model.minPage; i <= Model.maxPage; i++)
        {
            @if (i == Model.currentPage)
            {
                @i    
            }
            else
            {
                <a asp-action="Index" asp-route-page="@i">
                    @i
                </a>
            }
        }


    </div>
</div>